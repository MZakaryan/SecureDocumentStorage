@using SecureDocumentStorage.Models.DocumentViewModels
@model AddEditDocumentViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Document" asp-action="UploadDocument">
    <div class="form-group">
        <div>
            <p>Upload document</p>
            <input type="file" name="document" />
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-default form-group">Upload</button>
        </div>
    </div>
</form>